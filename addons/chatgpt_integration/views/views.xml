<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="chatgpt_integration.list">
      <field name="name">chatgpt_integration list</field>
      <field name="model">chatgpt_integration.chatgpt_integration</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="start_datetime"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="chatgpt_integration.action_window">
      <field name="name">chatgpt_integration window</field>
      <field name="res_model">chatgpt_integration.chatgpt_integration</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="chatgpt_integration.action_server">
      <field name="name">chatgpt_integration server</field>
      <field name="model_id" ref="model_chatgpt_integration_chatgpt_integration"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="chatgpt_integration" id="chatgpt_integration.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="chatgpt_integration.menu_1" parent="chatgpt_integration.menu_root"/>
    <menuitem name="Menu 2" id="chatgpt_integration.menu_2" parent="chatgpt_integration.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="chatgpt_integration.menu_1_list" parent="chatgpt_integration.menu_1"
              action="chatgpt_integration.action_window"/>
    <menuitem name="Server to list" id="chatgpt_integration" parent="chatgpt_integration.menu_2"
              action="chatgpt_integration.action_server"/>

  </data>
</odoo>
